@using RealEstates.Services.Models;
@model IEnumerable<DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Real Estate Bg - Тайно сме зидари!</h1>
</div>
<table class="table table-striped table-hover table-sm">
    <tr>
        <th>Name</th>
        <th>MinPrice</th>
        <th>MaxPrice</th>
        <th>AveragePrice</th>
        <th>PropertiesCounts</th>
    <tr />
    <tr>
        @foreach (var item in this.Model)
        {
    <tr>
        <td> @item.Name</td>
        <td> @item.MinPrice</td>
        <td> @item.MaxPrice</td>
        <td> @item.AveragePrice.ToString("0.00")€</td>
        <td> @item.PropertiesCounts</td>
    </tr>    
        }
    <tr />
</table>
